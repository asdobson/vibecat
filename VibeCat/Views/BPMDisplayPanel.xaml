<UserControl x:Class="VibeCat.Views.BPMDisplayPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="250" Background="#1E1E1E">
    <UserControl.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="ConsensusTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="AlgorithmNameStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="BPMValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Storyboard x:Key="BeatPulse">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="1" To="0.3" Duration="0:0:0.1"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="1" To="1.2" Duration="0:0:0.1"
                           AutoReverse="True"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="1" To="1.2" Duration="0:0:0.1"
                           AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Border BorderBrush="#444" BorderThickness="1" CornerRadius="5">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="BPM Detection" Style="{StaticResource HeaderTextStyle}"/>

            <!-- Consensus BPM -->
            <Border Grid.Row="1" Background="#2A2A2A" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="Consensus BPM" Foreground="#888" FontSize="10" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="ConsensusBPM" Text="---.--" Style="{StaticResource ConsensusTextStyle}"/>
                    <ProgressBar x:Name="ConsensusConfidence" Height="4" Margin="0,5,0,0"
                               Foreground="#00FF00" Background="#333" Maximum="1"/>
                </StackPanel>
            </Border>

            <!-- Separator -->
            <Rectangle Grid.Row="2" Height="1" Fill="#444" Margin="0,0,0,10"/>

            <!-- Algorithm Results -->
            <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="AlgorithmsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2A2A2A" CornerRadius="3" Padding="8" Margin="0,0,0,8">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Text="{Binding AlgorithmName}"
                                             Style="{StaticResource AlgorithmNameStyle}"/>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="{Binding BPM, StringFormat={}{0:F1}}"
                                                 Style="{StaticResource BPMValueStyle}"/>
                                        <TextBlock Text=" BPM" Foreground="#888" FontSize="12"
                                                 VerticalAlignment="Bottom"/>
                                    </StackPanel>

                                    <Grid Grid.Row="2" Margin="0,4,0,0">
                                        <ProgressBar Height="3" Background="#333" Maximum="1"
                                                   Value="{Binding Confidence}">
                                            <ProgressBar.Style>
                                                <Style TargetType="ProgressBar">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=IsHighConfidence}" Value="True">
                                                            <Setter Property="Foreground" Value="#00FF00"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Path=IsMediumConfidence}" Value="True">
                                                            <Setter Property="Foreground" Value="#FFD700"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Path=IsLowConfidence}" Value="True">
                                                            <Setter Property="Foreground" Value="#FF4444"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ProgressBar.Style>
                                        </ProgressBar>
                                        <TextBlock Text="{Binding Confidence, StringFormat={}{0:P0}}"
                                                 Foreground="#666" FontSize="9"
                                                 HorizontalAlignment="Right" Margin="0,-2,0,0"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Beat Indicator -->
            <Grid Grid.Row="4" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Beat" Foreground="#666" FontSize="10"
                         VerticalAlignment="Center" Margin="0,0,5,0"/>

                <Ellipse Grid.Column="1" x:Name="BeatIndicator"
                       Width="12" Height="12" Fill="#FF0000"
                       HorizontalAlignment="Left"
                       RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <ScaleTransform/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Button Grid.Column="2" x:Name="ResetButton" Content="Reset"
                      Width="50" Height="20" FontSize="10"
                      Background="#444" Foreground="White"
                      BorderBrush="#666" Click="ResetButton_Click"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>