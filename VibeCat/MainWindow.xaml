<Window x:Class="VibeCat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:VibeCat.Controls"
        xmlns:views="clr-namespace:VibeCat.Views"
        mc:Ignorable="d"
        Title="VibeCat"
        Height="400"
        Width="533"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Left="100"
        Top="100">
    
    <Grid>
        <!-- Layer 1: Cat animation (always visible) -->
        <controls:CatAnimationView x:Name="CatAnimation"/>

        <!-- Layer 2: Border frame (shown in UI mode) -->
        <!-- This provides visual separation without obscuring transparency -->
        <Border x:Name="BackgroundOverlay"
                BorderBrush="#AA000000"
                BorderThickness="2"
                Visibility="Collapsed"/>

        <!-- Layer 3: Custom UI Panel (shown in UI mode) -->
        <Grid x:Name="UIPanel"
              Visibility="Collapsed">

            <!-- Custom title bar -->
            <controls:CustomTitleBar x:Name="TitleBar"
                                    VerticalAlignment="Top"/>

            <!-- Settings panel -->
            <views:SettingsPanel x:Name="SettingsPanel"
                               HorizontalAlignment="Right"
                               Margin="0,32,0,0"
                               Visibility="Collapsed"/>

            <!-- Resize grip -->
            <controls:ResizeGrip x:Name="ResizeGrip"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>